{
    "private": true,
    "author": "TypeScriptLibs and Contributers",
    "description": "TypeScript Library for the Mastodon API",
    "license": "MIT",
    "name": "tsl-mastodon-api",
    "type": "module",
    "version": "0.0.5",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "bugs": "https://github.com/typescriptlibs/tsl-mastodon-api/issues",
    "homepage": "https://github.com/typescriptlibs/tsl-mastodon-api#readme",
    "repository": "https://github.com/typescriptlibs/tsl-mastodon-api.git",
    "dependencies": {
        "@types/oauth": "~0.9.1",
        "node-fetch": "^3.3.0",
        "oauth": "~0.10.0"
    },
    "devDependencies": {
        "@types/node": "^16.18.3",
        "@typescriptlibs/tst": "^0.0.2",
        "tsl-mastodon-api": "file:./",
        "typescript": "~4.9.3"
    },
    "engines": {
        "node": ">=16.8.0"
    },
    "files": [
        "lib/",
        "AUTHORS.md",
        "LICENSE.txt",
        "README.md"
    ],
    "keywords": [
        "Mastodon",
        "TypeScript"
    ],
    "scripts": {
        "build": "npm run clean && tsc -b src",
        "clean": "rm -rf lib tst-run",
        "server:start": "cd tst-data && python3 -m http.server 8000 &> ../test.log &",
        "server:stop": "kill $(lsof -t -i:8000)",
        "test": "npm run server:start ; tst --verbose tst/ ; npm run server:stop",
        "watch": "npm run build -- --watch"
    }
}
